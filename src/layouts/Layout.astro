---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { Image } from "astro:assets";
import logo from "../images/logo.png";
import NavigationLink from "../components/NavigationLink.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>

  <body class="body">
    <!-- header and nav below -->
    <header class="header">
      <Image src={logo} alt="weblogo knitted love." />
      <nav class="nav">
        <NavigationLink href="/">Gallary</NavigationLink>
        <NavigationLink href="/about">About</NavigationLink>
      </nav>
    </header>
    <!-- cards below -->
    <slot />
    <!-- footer below -->
    <footer class="px-4 md:px-0 my-12">
      <div class="max-w-prose mx-auto pt-4 border-t border-t-neutral-300">
        I DO IT FOR LOVE
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@1,300;1,400&family=Roboto+Slab:wght@200;400;800&family=Rubik+Iso&display=swap");

  header {
    font-size: 400;
    font-style: normal;
  }
  html {
    font-family: Fira Sans;
    background: #efd3c4;
    background-size: 224px;
  }
</style>
